    </script>
    <script>
        // Variável global para armazenar qual linha do XML estamos editando
        let indiceLinhaEdicao = -1;

        // Função chamada ao clicar no lápis na primeira modal
        function definirItemEdicao(index) {
            indiceLinhaEdicao = index;
            console.log("Editando item do índice: " + index);
        }

        // Função chamada ao clicar em "Selecionar" na segunda modal
        function selecionarProduto(idProduto, nomeProduto) {
            if (indiceLinhaEdicao === -1) {
                alert("Erro: Nenhuma linha selecionada para vínculo.");
                return;
            }

            // 1. Atualiza o Input Hidden (para enviar ao Backend)
            // Isso garante que quando você der submit na modalProdutos, o ID vai junto
            let inputHidden = document.getElementById("input_id_interno_" + indiceLinhaEdicao);
            if(inputHidden) inputHidden.value = idProduto;

            let bgColorRow = document.getElementById("indicador-bg-color-selecao-" + indiceLinhaEdicao)
            bgColorRow.classList.remove("bg-prod-nao-cadastrados");

            // 2. Atualiza visualmente a tabela da Modal Pai
            let tdId = document.getElementById("td_id_interno_" + indiceLinhaEdicao);
            let tdNome = document.getElementById("td_nome_interno_" + indiceLinhaEdicao);

            if(tdId) tdId.innerText = idProduto;
            if(tdNome) tdNome.innerText = nomeProduto;

            // 3. Fecha a modal de seleção (retorna para a modal anterior)
            // No Bootstrap 5, para fechar programaticamente:
            const modalElement = document.getElementById('selecionaProdutoModal');
            const modalInstance = bootstrap.Modal.getInstance(modalElement);
            if (modalInstance) {
                modalInstance.hide();
            }

            // Opcional: Limpar o índice após seleção
            // indiceLinhaEdicao = -1;
        }

        // Script simples de busca na tabela (Filtro JS)
        document.getElementById('product-search').addEventListener('keyup', function() {
            let searchValue = this.value.toLowerCase();
            let rows = document.querySelectorAll('#selecionaProdutoModal tbody tr');

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });



        // ############################################################################
                    document.getElementById("formVinculoProdutos").addEventListener("submit", function(event) {

            // 1. Validação Básica: A tabela está vazia?
            const linhasProdutos = document.querySelectorAll("#modalProdutos tbody tr");
            if (linhasProdutos.length === 0) {
                mostrarErroValidacao(event, "Não há produtos na lista para serem processados.");
                return;
            }

            // 2. Validação Detalhada: Existem itens sem vínculo (ID vazio)?
            let existemItensSemVinculo = false;

            // Seleciona todos os inputs que terminam com '.Produto.Id' (que é o padrão do ASP.NET Core)
            const inputsIds = document.querySelectorAll("input[name$='.Produto.Id']");

            for (let i = 0; i < inputsIds.length; i++) {
                // Verifica se o valor é nulo ou vazio
                if (!inputsIds[i].value || inputsIds[i].value.trim() === "") {
                    existemItensSemVinculo = true;
                    break; // Se achou um erro, já pode parar de procurar
                }
            }

            if (existemItensSemVinculo) {
                mostrarErroValidacao(event, "Existem itens na lista que não foram vinculados a um produto interno (Código Interno vazio).");
                return;
            }

            // Se chegou aqui, está tudo certo e o form será enviado.
        });

        // Função auxiliar para mostrar o erro e parar o form
        function mostrarErroValidacao(event, mensagem) {
            event.preventDefault(); // Impede o envio
            pararSpinner();         // Para o loading

            const containerAlertas = document.querySelector('.alert-floating-container');

            if (containerAlertas) {
                containerAlertas.innerHTML = `
                    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Atenção!</strong>
                            <div class="small">${mensagem}</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
            } else {
                alert(mensagem); // Fallback caso não ache a div
            }
        }

        function pararSpinner() {
            const spinner = document.getElementById("spinner");
            if (spinner) spinner.classList.add("d-none");
        }

        async function buscarNotas() {
            const form = document.getElementById('formBuscaNotas');
            const formData = new FormData(form);
            // Converte os dados do formulário em uma string de query (param1=valor1&param2=valor2)
            const params = new URLSearchParams(formData).toString();

            const buscarBtn = document.querySelector('#formBuscaNotas button[type="button"]');
            const tabelaBody = document.getElementById('tabelaResultadosBody');
            const placeholder = document.getElementById('searchPlaceholder');
            const resultadosContainer = document.getElementById('searchResultsContainer');

            // --- 1. ESTADO DE CARREGAMENTO (LOADING) ---
            buscarBtn.disabled = true;
            buscarBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Buscando...';

            placeholder.innerHTML = '<div class="spinner-border text-primary" role="status"></div><p class="mt-2">Buscando notas fiscais...</p>';
            placeholder.style.display = 'block';
            resultadosContainer.style.display = 'none';
            tabelaBody.innerHTML = ''; // Limpa resultados antigos

            try {
                // --- 2. REQUISIÇÃO AJAX (Ajuste o Controller/Action se necessário) ---
                const response = await fetch(`/NotaFiscal/BuscarNotasPartial?${params}`);

                if (!response.ok) {
                    throw new Error(`Erro de HTTP: ${response.status}`);
                }

                const htmlResultado = await response.text();

                // --- 3. INJEÇÃO DO HTML E ATUALIZAÇÃO DA VIEW ---

                // Verifica se o HTML retornado contém dados válidos (Se não tiver, o servidor pode ter enviado 'Nenhum resultado' no HTML)
                if (htmlResultado.trim().length > 0 && htmlResultado.includes('<tr')) {
                    tabelaBody.innerHTML = htmlResultado;
                    placeholder.style.display = 'none';
                    resultadosContainer.style.display = 'block';
                } else {
                    // Se não houver dados, exibe a mensagem de placeholder
                    tabelaBody.innerHTML = '';
                    placeholder.innerHTML = '<i class="bi bi-file-earmark-excel display-1 opacity-25"></i><p class="mt-3">Nenhuma nota fiscal encontrada com estes filtros.</p>';
                    placeholder.style.display = 'block';
                    resultadosContainer.style.display = 'none';
                }

            } catch (error) {
                console.error("Erro na busca AJAX:", error);
                placeholder.innerHTML = `<p class="text-danger">Erro ao processar a busca: ${error.message}</p>`;
            } finally {
                // --- 4. FINALIZAÇÃO DO ESTADO DE CARREGAMENTO ---
                buscarBtn.disabled = false;
                buscarBtn.innerHTML = '<i class="bi bi-search me-1"></i> Buscar';
            }
        }

    </script>
}
