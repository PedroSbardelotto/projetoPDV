@model PDV.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card border-0 shadow-sm rounded-4 text-center overflow-hidden">
                <div class="card-body p-5">

                    <div class="mb-4">
                        <div class="bg-warning bg-opacity-10 p-4 rounded-circle d-inline-flex text-warning shadow-sm">
                            <i class="bi bi-folder-fill fs-1"></i>
                        </div>
                    </div>

                    <h6 class="text-uppercase text-muted small fw-bold letter-spacing-1 mb-1">Categoria</h6>
                    <h3 class="fw-bold text-dark mb-4">@Model.Nome</h3>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill fw-bold">Voltar</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-pencil me-2"></i>Editar
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3">
                    <small class="text-muted">ID do Sistema: #@Model.Id</small>
                </div>
            </div>

        </div>
    </div>
</div>