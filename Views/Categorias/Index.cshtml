@model IEnumerable<PDV.Models.Categoria>

@{
    ViewData["Title"] = "Gestão de Categorias";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Nova Categoria
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">Categorias Cadastradas</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-bs-id="@item.Id"
                                        data-bs-name="@item.Nome"
                                        data-nome-base="categoria"
                                        data-bs-url="@Url.Action("Delete","Categorias")">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_DeleteModal" />