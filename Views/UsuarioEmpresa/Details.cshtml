@model PDV.Models.UsuarioEmpresa

@{
    ViewData["Title"] = "Perfil da Empresa";

    // Gerar inicial para o avatar da empresa
    var inicial = !string.IsNullOrEmpty(Model.NomeFantasia) ? Model.NomeFantasia.Substring(0, 1).ToUpper() : "?";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

                <!-- Capa / Header do Perfil -->
                <div class="bg-light border-bottom p-5 text-center position-relative">
                    <div class="position-absolute top-0 end-0 p-3">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-white shadow-sm rounded-pill fw-bold text-primary btn-sm">
                            <i class="bi bi-pencil-fill me-1"></i> Editar Perfil
                        </a>
                    </div>

                    <div class="mb-3">
                        <div class="rounded-circle bg-white shadow p-1 d-inline-flex">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-bold display-4"
                                 style="width: 100px; height: 100px;">
                                @inicial
                            </div>
                        </div>
                    </div>

                    <h3 class="fw-bold text-dark mb-1">@Model.NomeFantasia</h3>
                    <p class="text-muted mb-0">@Model.NomeRazao</p>

                    <div class="mt-2">
                        <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3">
                            <i class="bi bi-check-circle-fill me-1"></i> Conta Ativa
                        </span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">

                        <!-- Dados de Identificação -->
                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">
                                <i class="bi bi-building me-2"></i>Dados Corporativos
                            </h6>

                            <div class="mb-3">
                                <label class="small text-muted fw-bold d-block">CNPJ</label>
                                <div class="d-flex align-items-center">
                                    <span class="font-monospace bg-light px-2 py-1 rounded text-dark border">
                                        <i class="bi bi-card-heading text-secondary me-2"></i>
                                        <!-- Adicionado ID para a máscara -->
                                        <span id="cnpj-mask">@Model.CNPJ</span>
                                    </span>
                                </div>
                            </div>

                            <div>
                                <label class="small text-muted fw-bold d-block">Inscrição Estadual</label>
                                <span class="text-dark fw-semibold">
                                    @(string.IsNullOrEmpty(Model.InscricaoEstadual) ? "Isento" : Model.InscricaoEstadual)
                                </span>
                            </div>
                        </div>

                        <!-- Dados de Contato -->
                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">
                                <i class="bi bi-person-rolodex me-2"></i>Contato
                            </h6>

                            <div class="mb-3">
                                <label class="small text-muted fw-bold d-block">E-mail Principal</label>
                                <div class="d-flex align-items-center text-break">
                                    <i class="bi bi-envelope-at text-primary me-2"></i>
                                    <a href="mailto:@Model.Email" class="text-decoration-none fw-semibold text-dark">
                                        @Model.Email
                                    </a>
                                </div>
                            </div>

                            <div>
                                <label class="small text-muted fw-bold d-block">Telefone / Celular</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-whatsapp text-success me-2"></i>
                                    <span id="contato-mask" class="fw-semibold text-dark">
                                        @(string.IsNullOrEmpty(Model.Contato) ? "--" : Model.Contato)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 p-3 bg-light rounded-3 border border-light">
                        <div class="row text-center g-3">
                            <div class="col-4 border-end">
                                <small class="text-muted text-uppercase d-block fw-bold" style="font-size: 0.7rem;">Acesso</small>
                                <span class="fw-bold text-primary">Administrador</span>
                            </div>
                            <div class="col-4 border-end">
                                <small class="text-muted text-uppercase d-block fw-bold" style="font-size: 0.7rem;">Membro Desde</small>
                                <span class="fw-bold text-dark">@DateTime.Now.Year</span>
                            </div>
                            <div class="col-4">
                                <small class="text-muted text-uppercase d-block fw-bold" style="font-size: 0.7rem;">Plano</small>
                                <span class="fw-bold text-success">Pro</span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-white border-top-0 pb-4 text-center">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-link text-secondary text-decoration-none small">
                        <i class="bi bi-arrow-left me-1"></i> Voltar ao Início
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            // Máscara de Telefone
            var contatoVal = $('#contato-mask').text().trim();
            if(contatoVal && contatoVal !== "--"){
                $('#contato-mask').mask('(00) 00000-0000');
            }

            // Máscara de CNPJ
            $('#cnpj-mask').mask('00.000.000/0000-00', {reverse: true});
        });
    </script>
}