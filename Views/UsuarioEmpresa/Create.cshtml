@model PDV.Models.UsuarioEmpresa

@{
    ViewData["Title"] = "Cadastrar Empresa";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3 text-primary">
                            <i class="bi bi-building-gear fs-4"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">Dados da Empresa</h4>
                            <p class="text-muted small mb-0">Preencha as informações fiscais e de contato do seu negócio.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Bloco 1: Identificação -->
                        <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">Identificação</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="NomeRazao" class="form-label fw-bold small text-muted">Razão Social</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-building"></i></span>
                                    <input asp-for="NomeRazao" class="form-control bg-light border-start-0 ps-0" placeholder="Razão Social Ltda" autofocus />
                                </div>
                                <span asp-validation-for="NomeRazao" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NomeFantasia" class="form-label fw-bold small text-muted">Nome Fantasia</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-shop"></i></span>
                                    <input asp-for="NomeFantasia" class="form-control bg-light border-start-0 ps-0" placeholder="Nome da Loja" />
                                </div>
                                <span asp-validation-for="NomeFantasia" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Bloco 2: Fiscal -->
                        <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2 mt-4">Dados Fiscais</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="CNPJ" class="form-label fw-bold small text-muted">CNPJ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-heading"></i></span>
                                    <input asp-for="CNPJ" id="cnpj-mask" class="form-control bg-light border-start-0 ps-0" placeholder="00.000.000/0000-00" />
                                </div>
                                <span asp-validation-for="CNPJ" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="InscricaoEstadual" class="form-label fw-bold small text-muted">Inscrição Estadual</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-file-earmark-text"></i></span>
                                    <input asp-for="InscricaoEstadual" class="form-control bg-light border-start-0 ps-0" placeholder="Isento ou Número" />
                                </div>
                                <span asp-validation-for="InscricaoEstadual" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Bloco 3: Contato -->
                        <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2 mt-4">Contato Principal</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-muted">E-mail Corporativo</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" placeholder="contato@empresa.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Contato" class="form-label fw-bold small text-muted">Telefone / Celular</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Contato" id="contato-mask" class="form-control bg-light border-start-0 ps-0" placeholder="(00) 0000-0000" />
                                </div>
                                <span asp-validation-for="Contato" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 dashed-border opacity-50">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light text-secondary fw-bold border-0 px-3">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm rounded-3">
                                <i class="bi bi-check-lg me-2"></i>Salvar Dados
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#cnpj-mask').mask('00.000.000/0000-00', {reverse: true});
            $('#contato-mask').mask('(00) 00000-0000');
        });
    </script>
}