@model PDV.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <!-- Card Principal -->
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h4 class="fw-bold text-dark mb-1">Editar Fornecedor</h4>
                    <p class="text-muted small">Atualize as informações comerciais.</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DataEntrada" />
                        <!-- DataAtualizacao geralmente é setada no Controller, mas mantive se precisar passar -->
                        <input type="hidden" asp-for="DataAtualizacao" value="@DateTime.Now" />

                        <!-- Seção: Identificação -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="NomeFantasia" class="form-label fw-bold small text-uppercase text-muted">Nome Fantasia</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-shop"></i></span>
                                    <input asp-for="NomeFantasia" class="form-control bg-light border-start-0 ps-0" placeholder="Nome Fantasia" />
                                </div>
                                <span asp-validation-for="NomeFantasia" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NomeRazao" class="form-label fw-bold small text-uppercase text-muted">Razão Social</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-building"></i></span>
                                    <input asp-for="NomeRazao" class="form-control bg-light border-start-0 ps-0" placeholder="Razão Social" />
                                </div>
                                <span asp-validation-for="NomeRazao" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <!-- Seção: Documentos -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="CNPJ" class="form-label fw-bold small text-uppercase text-muted">CNPJ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-heading"></i></span>
                                    <input asp-for="CNPJ" id="cnpj-mask" class="form-control bg-light border-start-0 ps-0" />
                                </div>
                                <span asp-validation-for="CNPJ" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InscricaoEstadual" class="form-label fw-bold small text-uppercase text-muted">Inscrição Estadual</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-file-earmark-text"></i></span>
                                    <input asp-for="InscricaoEstadual" class="form-control bg-light border-start-0 ps-0" />
                                </div>
                                <span asp-validation-for="InscricaoEstadual" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <!-- Seção: Contato -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-uppercase text-muted">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" type="email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Contato" class="form-label fw-bold small text-uppercase text-muted">Telefone / Celular</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Contato" id="contato-mask" class="form-control bg-light border-start-0 ps-0" />
                                </div>
                                <span asp-validation-for="Contato" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <!-- Seção: Endereço -->
                        <div class="mb-4">
                            <label asp-for="Endereco" class="form-label fw-bold small text-uppercase text-muted">Endereço Completo</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Endereco" class="form-control bg-light border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Endereco" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Seção: Status (Estilizada) -->
                        <div class="mb-4">
                            <div class="form-check form-switch p-3 bg-light rounded-3 border d-flex align-items-center">
                                <input class="form-check-input ms-0 me-3 fs-4"
                                       type="checkbox"
                                       id="Status"
                                       name="Status"
                                       value="true"
                                       @(Model.Status.GetValueOrDefault() ? "checked" : "")
                                       style="cursor: pointer;" />
                                <!-- Hack para garantir envio de false se não marcado -->
                                <input name="Status" type="hidden" value="false" />

                                <div>
                                    <label class="form-check-label fw-bold text-dark" for="Status" style="cursor: pointer;">Fornecedor Ativo</label>
                                    <div class="small text-muted" style="font-size: 0.8rem;">Desmarque para arquivar este fornecedor sem excluí-lo do histórico.</div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 dashed-border opacity-50">

                        <!-- Ações -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light text-secondary fw-bold border-0 px-3">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm rounded-3">
                                <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#cnpj-mask').mask('00.000.000/0000-00', {reverse: true});
            $('#contato-mask').mask('(00) 00000-0000');
        });
    </script>
}