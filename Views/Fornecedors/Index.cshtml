@model IEnumerable<PDV.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="container-fluid px-0">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-6 fw-bold text-dark">Fornecedores</h1>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <form asp-action="Index" method="get">
                <div class="row align-items-center g-2">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" name="searchString" class="form-control border-start-0 bg-light"
                                   placeholder="Nome, CNPJ, Email..." value="@ViewData["CurrentFilter"]">
                        </div>
                    </div>

                    <div class="col-md-8 d-flex gap-2 justify-content-md-end justify-content-start">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-filter me-1"></i> Filtrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Limpar
                        </a>
                        <a asp-action="Create" class="btn btn-success text-white ms-auto ms-md-2 px-4">
                            <i class="bi bi-plus-lg me-1"></i> Novo Fornecedor
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Nome Fantasia</th>
                            <th>CNPJ</th>
                            <th>Email</th>
                            <th>Contato</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">
                                        @Html.DisplayFor(modelItem => item.NomeFantasia)
                                        <div class="small text-muted fw-normal">@Html.DisplayFor(modelItem => item.NomeRazao)</div>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.CNPJ)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Contato)</td>
                                    <td class="text-center">
                                        @if (item.Status == true)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Inativo</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0" title="Editar">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info border-0" title="Detalhes">
                                                <i class="bi bi-info-circle fs-5"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0" title="Excluir">
                                                <i class="bi bi-trash fs-5"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Nenhum fornecedor encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>