@model IEnumerable<PDV.Models.TipoPagamento>

@{
    ViewData["Title"] = "Formas de Pagamento";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">Pagamentos</h2>
                    <p class="text-muted small mb-0">Opções de recebimento</p>
                </div>
                <a asp-action="Create" class="btn btn-primary px-4 fw-bold shadow-sm rounded-3">
                    <i class="bi bi-plus-lg me-2"></i>Novo
                </a>
            </div>

            <!-- Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 text-uppercase text-muted small fw-bold border-0">Descrição</th>
                                    <th class="pe-4 py-3 text-uppercase text-muted small fw-bold border-0 text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    // Lógica visual simples para ícones
                                    string icon = "bi-credit-card";
                                    string nome = item.Descricao.ToLower();
                                    if (nome.Contains("dinheiro")) icon = "bi-cash-stack";
                                    else if (nome.Contains("pix")) icon = "bi-qr-code";
                                    else if (nome.Contains("boleto")) icon = "bi-barcode";

                                    <tr class="border-bottom border-light">
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-3 bg-light text-primary d-flex align-items-center justify-content-center me-3 border"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi @icon fs-5"></i>
                                                </div>
                                                <span class="fw-semibold text-dark">@item.Descricao</span>
                                            </div>
                                        </td>
                                        <td class="pe-4 text-end">
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info">
                                                    <i class="bi bi-eye-fill"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-light text-danger"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                        data-bs-id="@item.Id" data-bs-name="@item.Descricao"
                                                        data-nome-base="pagamento"
                                                        data-bs-url="@Url.Action("Delete", "TipoPagamentoes")">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-wallet2 text-muted opacity-25" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3">Nenhuma forma de pagamento cadastrada.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteModal" />