@model PDV.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input asp-for="DataEntrada" hidden />
                    <input asp-for="DataAtualizacao" hidden />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="Nome" class="form-control" placeholder="Nome completo ou Razão Social" />
                        </div>
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="email@dominio.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Contato" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                <input asp-for="Contato" id="contato-mask" class="form-control" placeholder="(00) 00000-0000" />
                            </div>
                            <span asp-validation-for="Contato" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CPF" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <input asp-for="CPF" id="cpf-mask" class="form-control" placeholder="000.000.000-00" />
                            </div>
                            <span asp-validation-for="CPF" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#cpf-mask').mask('000.000.000-00', {reverse: true});
            $('#contato-mask').mask('(00) 00000-0000');
        });
    </script>
}