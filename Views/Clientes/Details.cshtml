@model PDV.Models.Cliente
@using System.Globalization

@{
    ViewData["Title"] = "Detalhes do Cliente";
    var culture = new CultureInfo("pt-BR");
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Contato)</dt>
                    <dd class="col-sm-9" id="cel-mask">@Html.DisplayFor(model => model.Contato)</dd>

                    <hr class="my-3">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CPF)</dt>
                    <dd class="col-sm-9" id="cpf-mask">@Html.DisplayFor(model => model.CPF)</dd>

                    <hr class="my-3">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataEntrada)</dt>
                    <dd class="col-sm-9">@Model.DataEntrada.ToString("f", culture)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataAtualizacao)</dt>
                    <dd class="col-sm-9">@Model.DataAtualizacao.ToString("f", culture)</dd>
                </dl>
            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar à Lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-fill me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#cpf-mask').mask('000.000.000-00', {reverse: true});
            $('#cel-mask').mask('(00) 00000-0000');
        });
    </script>
}