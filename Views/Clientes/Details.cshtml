@model PDV.Models.ViewModels.ClienteDetailsViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Ficha do Cliente";
    var culture = new CultureInfo("pt-BR");

    var totalPendencias = Model.Pendencias?.Sum(x => x.ValorTotal) ?? 0;
    var qtdPendencias = Model.Pendencias?.Count() ?? 0;

    // Gera inicial para o avatar
    var inicial = !string.IsNullOrEmpty(Model.Cliente.Nome) ? Model.Cliente.Nome.Substring(0, 1).ToUpper() : "?";
}

<style>
    /* --- CSS PARA O MODAL DE PAGAMENTO (CARDS) --- */
    .payment-option-card {
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        border: 2px solid #e9ecef;
        background-color: #fff;
        color: #6c757d;
    }

        .payment-option-card:hover {
            border-color: #adb5bd;
            transform: translateY(-2px);
        }

        /* Estado Selecionado */
        .payment-option-card.selected {
            border-color: #198754; /* Verde Success */
            background-color: #f0fff4; /* Fundo verde claro */
            color: #198754;
        }

    .payment-icon {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 5px;
    }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">

            <!-- 1. CARD DE PERFIL -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Coluna Visual (Esquerda) -->
                        <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-4 border-end border-light">
                            <div class="rounded-circle bg-white shadow-sm text-primary d-flex align-items-center justify-content-center fw-bold mb-3"
                                 style="width: 100px; height: 100px; font-size: 2.5rem;">
                                @inicial
                            </div>
                            <h5 class="fw-bold text-dark mb-1 text-center">@Model.Cliente.Nome</h5>
                            <span class="badge bg-white text-secondary border rounded-pill px-3">
                                ID: #@Model.Cliente.Id
                            </span>

                            <div class="mt-3 text-center">
                                @if (qtdPendencias > 0)
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-3 py-2">
                                        <i class="bi bi-exclamation-circle me-1"></i> Possui Pendências
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3 py-2">
                                        <i class="bi bi-check-circle me-1"></i> Em dia
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- Coluna Dados (Direita) -->
                        <div class="col-md-8 p-4">
                            <h6 class="text-uppercase text-muted small fw-bold mb-4 border-bottom pb-2">Informações de Contato</h6>

                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">E-mail</label>
                                    <div class="d-flex align-items-center mt-1">
                                        <i class="bi bi-envelope text-secondary me-2"></i>
                                        <span>@(string.IsNullOrEmpty(Model.Cliente.Email) ? "Não informado" : Model.Cliente.Email)</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Telefone</label>
                                    <div class="d-flex align-items-center mt-1">
                                        <i class="bi bi-whatsapp text-success me-2"></i>
                                        <span id="cel-mask">@Model.Cliente.Contato</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">CPF</label>
                                    <div class="d-flex align-items-center mt-1">
                                        <i class="bi bi-card-heading text-secondary me-2"></i>
                                        <span id="cpf-mask">@Model.Cliente.CPF</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label class="small text-muted fw-bold">Cadastro</label>
                                    <div class="d-flex align-items-center mt-1">
                                        <i class="bi bi-calendar3 text-secondary me-2"></i>
                                        <span>@Model.Cliente.DataEntrada.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4 d-flex justify-content-end gap-2">
                                <a asp-action="Index" class="btn btn-light text-secondary fw-bold border">Voltar</a>
                                <a asp-action="Edit" asp-route-id="@Model.Cliente.Id" class="btn btn-outline-primary fw-bold">
                                    <i class="bi bi-pencil me-2"></i>Editar Dados
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 2. CARD FINANCEIRO (SÓ SE TIVER DÍVIDA) -->
            @if (Model.Pendencias != null && Model.Pendencias.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header bg-danger text-white py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold"><i class="bi bi-wallet2 me-2"></i>Extrato de Pendências</h5>
                        <div class="bg-white bg-opacity-25 px-3 py-1 rounded-3">
                            <small class="text-white text-opacity-75 d-block" style="font-size: 0.7rem; line-height: 1;">TOTAL DEVIDO</small>
                            <span class="fw-bold fs-5">@totalPendencias.ToString("C", culture)</span>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 text-muted small fw-bold text-uppercase border-0">Data Compra</th>
                                        <th class="text-muted small fw-bold text-uppercase border-0">Referência</th>
                                        <th class="text-end text-muted small fw-bold text-uppercase border-0">Valor</th>
                                        <th class="text-end pe-4 text-muted small fw-bold text-uppercase border-0">Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Pendencias.OrderByDescending(x => x.DataEntrada))
                                    {
                                        <tr class="border-bottom border-light">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-danger bg-opacity-10 text-danger p-2 me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                        <i class="bi bi-arrow-down-left"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold text-dark d-block">@item.DataEntrada.ToString("dd/MM/yyyy")</span>
                                                        <span class="small text-muted">@item.DataEntrada.ToString("HH:mm")</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-secondary border">Venda #@item.Id</span>
                                            </td>
                                            <td class="text-end fw-bold text-danger">
                                                @item.ValorTotal.ToString("C", culture)
                                            </td>
                                            <td class="pe-4 text-end">
                                                <button type="button" class="btn btn-sm btn-success fw-bold px-3 shadow-sm"
                                                        onclick="abrirModalPagamento(@item.Id, '@item.ValorTotal.ToString("C", culture)')">
                                                    <i class="bi bi-currency-dollar me-1"></i> Receber
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Estado Vazio (Sem dívidas) -->
                <div class="card border-0 shadow-sm rounded-4 p-5 text-center bg-light dashed-border">
                    <div class="mb-3 text-success opacity-50">
                        <i class="bi bi-emoji-smile fs-1"></i>
                    </div>
                    <h5 class="text-muted fw-bold">Tudo certo por aqui!</h5>
                    <p class="text-muted small mb-0">Este cliente não possui pendências financeiras.</p>
                </div>
            }

        </div>
    </div>
</div>

<!-- MODAL DE PAGAMENTO (Adicionado Novamente) -->
<div class="modal fade" id="modalPagamentoPendencia" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-success text-white border-0">
                <h5 class="modal-title fw-bold"><i class="bi bi-wallet2 me-2"></i>Receber Pagamento</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="Clientes" asp-action="PagarPendencia" method="post" id="formPagarPendencia">

                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="inputVendaId" />
                    <input type="hidden" name="tipoPagamentoId" id="inputTipoPagamentoId" required />

                    <div class="text-center mb-4">
                        <p class="text-muted text-uppercase small fw-bold mb-1 letter-spacing-1">Valor a Receber</p>
                        <h2 class="text-success fw-bolder display-5" id="displayValor">R$ 0,00</h2>
                        <div class="badge bg-light text-dark border mt-2">
                            Venda <span id="displayVendaId">#</span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4">

                    <p class="fw-bold mb-3 text-secondary">Selecione a forma de pagamento:</p>

                    <div class="row g-3">
                        @if (ViewBag.TipoPagamentos != null)
                        {
                            foreach (var tipo in ViewBag.TipoPagamentos)
                            {
                                // Lógica simples para ícones
                                string iconClass = "bi-cash-coin";
                                string desc = tipo.Descricao.ToLower();

                                if (desc.Contains("pix")) iconClass = "bi-qr-code-scan";
                                else if (desc.Contains("crédito")) iconClass = "bi-credit-card-2-front";
                                else if (desc.Contains("débito")) iconClass = "bi-credit-card";
                                else if (desc.Contains("dinheiro") || desc.Contains("espécie")) iconClass = "bi-cash-stack";

                                <div class="col-6">
                                    <div class="card payment-option-card h-100 py-3 text-center"
                                         onclick="selecionarPagamento(this, @tipo.Id)">
                                        <div class="card-body p-0">
                                            <i class="bi @iconClass payment-icon"></i>
                                            <span class="fw-semibold small">@tipo.Descricao</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                Nenhuma forma de pagamento cadastrada.
                                <br><small>Verifique o controller se ViewBag.TipoPagamentos está sendo preenchido.</small>
                            </div>
                        }
                    </div>

                    <!-- Mensagem de erro visual -->
                    <div id="msgErroPagamento" class="text-danger small text-center mt-2 d-none">
                        <i class="bi bi-exclamation-circle"></i> Selecione uma opção para continuar.
                    </div>
                </div>

                <!-- Footer com Botão Confirmar -->
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success fw-bold px-4" id="btnConfirmarPagamento" disabled>
                        <i class="bi bi-check-lg me-2"></i>Confirmar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#cpf-mask').mask('000.000.000-00', {reverse: true});
            $('#cel-mask').mask('(00) 00000-0000');
        });

        // Função para abrir o modal e setar os valores
        function abrirModalPagamento(vendaId, valorFormatado) {
            // Joga os valores nos campos do modal
            document.getElementById('inputVendaId').value = vendaId;
            document.getElementById('displayVendaId').textContent = '#' + vendaId;
            document.getElementById('displayValor').textContent = valorFormatado;

            // Reseta seleção anterior do modal
            document.getElementById('inputTipoPagamentoId').value = "";
            document.querySelectorAll('.payment-option-card').forEach(card => card.classList.remove('selected'));
            document.getElementById('btnConfirmarPagamento').disabled = true;
            document.getElementById('msgErroPagamento').classList.add('d-none');

            // Abre o modal usando Bootstrap 5
            var modalEl = document.getElementById('modalPagamentoPendencia');
            var modal = new bootstrap.Modal(modalEl);
            modal.show();
        }

        // Lógica de Seleção Visual (Cards)
        function selecionarPagamento(elemento, id) {
            // 1. Remove a classe 'selected' de todos os cards
            document.querySelectorAll('.payment-option-card').forEach(card => {
                card.classList.remove('selected');
            });

            // 2. Adiciona a classe 'selected' no clicado
            elemento.classList.add('selected');

            // 3. Atualiza o input hidden (que o formulário vai enviar)
            document.getElementById('inputTipoPagamentoId').value = id;

            // 4. Habilita o botão de confirmar
            document.getElementById('btnConfirmarPagamento').disabled = false;

            // 5. Esconde mensagem de erro se houver
            document.getElementById('msgErroPagamento').classList.add('d-none');
        }
    </script>
}