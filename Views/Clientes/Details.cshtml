@model PDV.Models.ViewModels.ClienteDetailsViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Detalhes do Cliente";
    var culture = new CultureInfo("pt-BR");

    var totalPendencias = Model.Pendencias?.Sum(x => x.ValorTotal) ?? 0;
    var qtdPendencias = Model.Pendencias?.Count() ?? 0;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-person-vcard me-2"></i>Dados Cadastrais
                    </h5>
                    @if (qtdPendencias > 0)
                    {
                        <span class="badge bg-danger rounded-pill">
                            <i class="bi bi-exclamation-circle me-1"></i> Possui Pendências
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success rounded-pill">
                            <i class="bi bi-check-circle me-1"></i> Em dia
                        </span>
                    }
                </div>
            </div>

            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Cliente.Nome)</dt>
                    <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Cliente.Nome)</dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Cliente.Email)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Cliente.Email))
                        {
                            @Html.DisplayFor(model => model.Cliente.Email)
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Cliente.Contato)</dt>
                    <dd class="col-sm-9" id="cel-mask">@Html.DisplayFor(model => model.Cliente.Contato)</dd>

                    <div class="col-12"><hr class="my-2 dashed"></div>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Cliente.CPF)</dt>
                    <dd class="col-sm-9" id="cpf-mask">@Html.DisplayFor(model => model.Cliente.CPF)</dd>

                    <dt class="col-sm-3 text-muted">Cadastro</dt>
                    <dd class="col-sm-9"><small>@Model.Cliente.DataEntrada.ToString("dd/MM/yyyy HH:mm")</small></dd>
                </dl>
            </div>

            <div class="card-footer bg-light d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Cliente.Id" class="btn btn-primary btn-sm">
                    <i class="bi bi-pencil-fill me-2"></i>Editar Dados
                </a>
            </div>
        </div>

        @if (Model.Pendencias != null && Model.Pendencias.Any())
        {
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger bg-opacity-10 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-danger">
                            <i class="bi bi-cash-coin me-2"></i>Pendências Financeiras
                        </h5>
                        <div class="text-end">
                            <small class="text-muted d-block" style="line-height:1;">Total Devido</small>
                            <span class="fs-5 fw-bold text-danger">@totalPendencias.ToString("C", culture)</span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Data</th>
                                    <th>Descrição / ID</th>
                                    <th class="text-end pe-4">Valor</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Pendencias.OrderByDescending(x => x.DataEntrada))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <i class="bi bi-calendar-event text-muted me-2"></i>
                                            @item.DataEntrada.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            <span class="fw-bold text-dark">Venda #@item.Id</span>
                                        </td>
                                        <td class="text-end pe-4 fw-bold text-danger">
                                            @item.ValorTotal.ToString("C", culture)
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Vendas" asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Ver Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-sm btn-success ms-1"
                                                    title="Pagar Pendência"
                                                    onclick="abrirModalPagamento(@item.Id, '@item.ValorTotal.ToString("C", culture)')">
                                                <i class="bi bi-currency-dollar"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="2" class="ps-4 fw-bold text-end">TOTAL GERAL:</td>
                                    <td class="text-end pe-4 fw-bold text-danger">@totalPendencias.ToString("C", culture)</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modalPagamentoPendencia" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-success text-white border-0">
                <h5 class="modal-title fw-bold"><i class="bi bi-wallet2 me-2"></i>Receber Pagamento</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="Clientes" asp-action="PagarPendencia" method="post" id="formPagarPendencia">

                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="inputVendaId" />

                    <input type="hidden" name="tipoPagamentoId" id="inputTipoPagamentoId" required />

                    <div class="text-center mb-4">
                        <p class="text-muted text-uppercase small fw-bold mb-1 letter-spacing-1">Valor a Receber</p>
                        <h2 class="text-success fw-bolder display-5" id="displayValor">R$ 0,00</h2>
                        <div class="badge bg-light text-dark border mt-2">
                            Venda <span id="displayVendaId">#</span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4">

                    <p class="fw-bold mb-3 text-secondary">Selecione a forma de pagamento:</p>

                    <div class="row g-3">
                        @if (ViewBag.TipoPagamentos != null)
                        {
                            foreach (var tipo in ViewBag.TipoPagamentos)
                            {
                                // Lógica simples para escolher ícone baseado no nome (UI Dinâmica)
                                string iconClass = "bi-cash-coin"; // Padrão
                                string desc = tipo.Descricao.ToLower();

                                if (desc.Contains("pix")) iconClass = "bi-qr-code-scan";
                                else if (desc.Contains("crédito")) iconClass = "bi-credit-card-2-front";
                                else if (desc.Contains("débito")) iconClass = "bi-credit-card";
                                else if (desc.Contains("dinheiro") || desc.Contains("espécie")) iconClass = "bi-cash-stack";

                                <div class="col-6">
                                    <div class="card payment-option-card h-100 py-3 text-center"
                                         onclick="selecionarPagamento(this, @tipo.Id)">
                                        <div class="card-body p-0">
                                            <i class="bi @iconClass payment-icon"></i>
                                            <span class="fw-semibold small">@tipo.Descricao</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">Nenhuma forma de pagamento cadastrada.</div>
                        }
                    </div>

                    <div id="msgErroPagamento" class="text-danger small text-center mt-2 d-none">
                        <i class="bi bi-exclamation-circle"></i> Selecione uma opção acima.
                    </div>
                </div>

                <div class="modal-footer border-0 bg-light p-3">
                    <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success fw-bold px-4" id="btnConfirmarPagamento" disabled>
                        <i class="bi bi-check-lg me-2"></i>Confirmar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#cpf-mask').mask('000.000.000-00', {reverse: true});
            $('#cel-mask').mask('(00) 00000-0000');
        });

        // Função para abrir o modal e setar os valores
        function abrirModalPagamento(vendaId, valorFormatado) {
            // Joga os valores nos campos do modal
            document.getElementById('inputVendaId').value = vendaId;
            document.getElementById('displayVendaId').textContent = '#' + vendaId;
            document.getElementById('displayValor').textContent = valorFormatado;

            // Abre o modal usando Bootstrap 5
            var modalEl = document.getElementById('modalPagamentoPendencia');
            var modal = new bootstrap.Modal(modalEl);
            modal.show();
        }
            function selecionarPagamento(elemento, id) {
            // 1. Remove a classe 'selected' de todos os cards
            document.querySelectorAll('.payment-option-card').forEach(card => {
                card.classList.remove('selected');
            });

            // 2. Adiciona a classe 'selected' no clicado
            elemento.classList.add('selected');

            // 3. Atualiza o input hidden (que o formulário vai enviar)
            document.getElementById('inputTipoPagamentoId').value = id;

            // 4. Habilita o botão de confirmar (Feedback UX)
            document.getElementById('btnConfirmarPagamento').disabled = false;

            // 5. Esconde mensagem de erro se houver
            document.getElementById('msgErroPagamento').classList.add('d-none');
        }
    </script>
    <style>
        .payment-option-card {
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            border: 2px solid #e9ecef;
            background-color: #fff;
            color: #6c757d;
        }

            .payment-option-card:hover {
                border-color: #adb5bd;
                transform: translateY(-2px);
            }

            /* Estado Selecionado */
            .payment-option-card.selected {
                border-color: #198754; /* Verde Success do Bootstrap */
                background-color: #f0fff4; /* Fundo verde bem claro */
                color: #198754;
            }

        .payment-icon {
            font-size: 1.5rem;
            display: block;
            margin-bottom: 5px;
        }
    </style>
}