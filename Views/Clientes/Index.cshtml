@model IEnumerable<PDV.Models.Cliente>

@{
    ViewData["Title"] = "Gestão de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus-fill me-2"></i>Novo Cliente
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">Clientes Cadastrados</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contato)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPF)
                        </th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contato)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPF)
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-client-id="@item.Id"
                                        data-client-name="@item.Nome"
                                        title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir o cliente: <strong id="clientName"></strong>?
                <p class="text-danger mt-2"><small>Esta ação não pode ser desfeita.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" id="clientId" name="id" />
                    <button type="submit" class="btn btn-danger">Sim, Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {

            var button = event.relatedTarget;

            // Extrai dados dos atributos data-bs-*
            var clientId = button.getAttribute('data-client-id');
            var clientName = button.getAttribute('data-client-name');

            // Atualiza o conteúdo do modal
            var modalBodyName = deleteModal.querySelector('#clientName');
            var deleteFormInput = deleteModal.querySelector('#clientId');
            var deleteForm = deleteModal.querySelector('#deleteForm');

            modalBodyName.textContent = clientName;
            deleteFormInput.value = clientId;

            var currentAction = '@Url.Action("Delete")';
            deleteForm.action = currentAction + '/' + clientId;
        });
    </script>
}