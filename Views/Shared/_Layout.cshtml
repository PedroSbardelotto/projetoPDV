<!DOCTYPE html>
<html lang="pt-br" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDV System</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PDV.styles.css" asp-append-version="true" />

    <style>
        /* --- VARIÁVEIS GLOBAIS (Design System) --- */
        :root {
            --primary-color: #4361ee;
            --primary-hover: #3a56d4;
            --secondary-bg: #f8f9fa;
            --sidebar-bg: #1e293b; /* Azul escuro moderno (Slate) */
            --sidebar-text: #e2e8f0;
            --sidebar-active: #334155;
            --sidebar-accent: #4361ee;
            --text-dark: #2b2d42;
        }

        /* Tipografia Moderna */
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--secondary-bg);
            overflow: hidden; /* IMPEDE SCROLL NA PÁGINA INTEIRA */
        }

        /* --- SIDEBAR --- */
        .app-sidebar {
            width: 260px;
            background-color: var(--sidebar-bg);
            color: var(--sidebar-text);
            display: flex;
            flex-direction: column;
            transition: all 0.3s;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 1.5rem;
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff;
            text-decoration: none;
            display: flex;
            align-items: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-menu {
            padding: 1rem 0;
            overflow-y: auto;
            flex: 1;
        }

        .nav-link {
            color: #94a3b8; /* Cinza azulado */
            padding: 0.8rem 1.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            border-left: 4px solid transparent; /* Preparo para estado ativo */
        }

            .nav-link:hover {
                color: #fff;
                background-color: rgba(255,255,255,0.05);
            }

            .nav-link.active {
                color: #fff;
                background-color: var(--sidebar-active);
                border-left-color: var(--sidebar-accent); /* Borda azul indicando ativo */
            }

            .nav-link i {
                font-size: 1.2rem;
                width: 30px;
                text-align: center;
            }

        /* --- ÁREA PRINCIPAL --- */
        .app-main {
            flex: 1;
            position: relative;
            display: flex;
            flex-direction: column;
            overflow: hidden; /* O conteúdo interno que deve rolar, não o container */
        }

        /* Scroll Area para páginas normais (CRUD) */
        /* O Home/PDV vai sobrescrever isso com layout próprio */
        .content-scrollable {
            flex: 1;
            overflow-y: auto;
            padding: 0; /* Remove padding global para permitir full-width no PDV */
        }

        /* --- ALERTAS FLUTUANTES (TOASTS) --- */
        /* Ficam por cima de tudo para não quebrar o layout fixo */
        .alert-floating-container {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 9999;
            width: 350px;
            max-width: 90%;
        }

        .alert {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            border: none;
            border-left: 5px solid;
        }

        .alert-success {
            border-left-color: #198754;
            background: #fff;
            color: #198754;
        }

        .alert-danger {
            border-left-color: #dc3545;
            background: #fff;
            color: #dc3545;
        }

    </style>
</head>
<body class="h-100">

    <div class="d-flex h-100">

        <nav class="app-sidebar shadow">
            <a class="sidebar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bag-dash-fill me-2 text-primary"></i> PDV <span class="fw-light ms-1 text-muted fs-6">Pro</span>
            </a>

            <ul class="nav flex-column sidebar-menu">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-calculator-fill me-2"></i>Frente de Caixa
                    </a>
                </li>

                <li class="nav-item mt-3 text-uppercase small fw-bold px-4 mb-2" style="color: #475569;">Gestão</li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Vendas" asp-action="Index">
                        <i class="bi bi-receipt me-2"></i>Histórico Vendas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Fechamentoes" asp-action="Index">
                        <i class="bi bi-safe2-fill me-2"></i>Fechamentos
                    </a>
                </li>

                <li class="nav-item mt-3 text-uppercase small fw-bold px-4 mb-2" style="color: #475569;">Cadastros</li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Produtos" asp-action="Index">
                        <i class="bi bi-box-seam-fill me-2"></i>Produtos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i>Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="TipoPagamentoes" asp-action="Index">
                        <i class="bi bi-credit-card-2-back-fill me-2"></i>Formas Pagto
                    </a>
                </li>
            </ul>

            <div class="p-3 border-top border-secondary border-opacity-25">
                <div class="d-flex align-items-center text-white-50 small">
                    <i class="bi bi-person-circle fs-4 me-2"></i>
                    <div>
                        <div class="text-white fw-bold">Operador</div>
                        <span class="text-success online-dot">●</span> Online
                    </div>
                </div>
            </div>
        </nav>

        <main class="app-main">

            <div class="alert-floating-container">
                @if (TempData["Sucesso"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                        <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Sucesso!</strong>
                            <div class="small text-dark">@TempData["Sucesso"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Erro"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Atenção!</strong>
                            <div class="small text-dark">@TempData["Erro"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <div class="content-scrollable">
                @RenderBody()
            </div>

        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const currentPath = window.location.pathname.toLowerCase();
            const links = document.querySelectorAll('.sidebar-menu .nav-link');

            links.forEach(link => {
                const href = link.getAttribute('href').toLowerCase();
                // Lógica simples: se a URL contiver o href do link (ex: /Produtos), ativa
                if (currentPath === href || (href !== '/' && currentPath.startsWith(href))) {
                    link.classList.add('active');
                }
                // Tratamento especial para Home (/)
                if (currentPath === '/' && href === '/') {
                    link.classList.add('active');
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert-floating-container .alert').alert('close');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_DeleteModal" />
</body>
</html>