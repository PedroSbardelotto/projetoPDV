@using Microsoft.EntityFrameworkCore
@inject PDV.Data.PDVContext _context

@{
    string nomeEmpresa = "Clique para cadastrar empresa";
    bool statusCaixa = false;
    try
    {
        statusCaixa = _context.Fechamento.Any(f => f.DataFechamento == null);
        var empresa = _context.UsuarioEmpresa.FirstOrDefaultAsync();
        if(empresa != null)
        {
            nomeEmpresa = empresa.Result!.NomeFantasia.ToString();
        }
    }
    catch
    {
        
    }
    string statusColor = statusCaixa ? "text-success" : "text-danger";
    string statusBg = statusCaixa ? "bg-success" : "bg-danger";
    string statusText = statusCaixa ? "Online" : "Offline";
}

<!DOCTYPE html>
<html lang="pt-br" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDV System</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PDV.styles.css" asp-append-version="true" />

    <style>
        /* --- VARIÁVEIS GLOBAIS --- */
        :root {
            --primary-color: #4361ee;
            --primary-hover: #3a56d4;
            --secondary-bg: #f8f9fa;
            --sidebar-bg: #1e293b;
            --sidebar-text: #94a3b8;
            --sidebar-text-active: #ffffff;
            --sidebar-hover-bg: rgba(255, 255, 255, 0.05);
            --text-dark: #2b2d42;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--secondary-bg);
            overflow: hidden; /* Impede scroll duplo */
        }

        /* --- SIDEBAR (BARRA LATERAL) --- */
        .app-sidebar {
            width: 260px;
            background-color: var(--sidebar-bg);
            display: flex;
            flex-direction: column;
            height: 100vh;
            transition: transform 0.3s ease-in-out;
            z-index: 1040;
            flex-shrink: 0; /* Impede que a sidebar encolha */
        }

        .sidebar-brand {
            height: 70px;
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            color: #fff;
            font-size: 1.4rem;
            font-weight: 700;
            text-decoration: none;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        /* Área de Scroll do Menu */
        .sidebar-menu-container {
            flex: 1; /* Ocupa todo espaço disponível verticalmente */
            overflow-y: auto; /* Habilita scroll apenas aqui se necessário */
            overflow-x: hidden;
            padding: 1rem 0.8rem; /* Espaçamento interno */
        }

        /* Estilização da Scrollbar Fina */
        .sidebar-menu-container::-webkit-scrollbar {
            width: 5px;
        }

        .sidebar-menu-container::-webkit-scrollbar-track {
            background: transparent;
        }

        .sidebar-menu-container::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.1);
            border-radius: 4px;
        }

        .nav-title {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin: 1.2rem 0 0.5rem 0.8rem;
            font-weight: 700;
        }

        .nav-link {
            color: var(--sidebar-text);
            padding: 0.7rem 1rem; /* Reduzi o padding para diminuir o espaço */
            border-radius: 8px;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            font-weight: 500;
            font-size: 0.95rem;
            margin-bottom: 2px; /* Pequeno espaço entre itens */
        }

            .nav-link:hover {
                color: var(--sidebar-text-active);
                background-color: var(--sidebar-hover-bg);
            }

            .nav-link.active {
                color: #fff;
                background-color: var(--primary-color);
                box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
            }

            .nav-link i {
                font-size: 1.1rem;
                margin-right: 0.8rem;
                width: 20px;
                text-align: center;
            }

        /* Perfil no Rodapé */
        .sidebar-footer {
            border-top: 1px solid rgba(255,255,255,0.05);
            padding: 1rem;
            background-color: rgba(0,0,0,0.1);
        }

        /* --- ÁREA PRINCIPAL --- */
        .app-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
            position: relative;
            width: 100%; /* Garante que ocupe o resto da tela */
        }

        .content-scrollable {
            flex: 1;
            overflow-y: auto;
            padding: 0;
        }

        /* Botão Toggle Mobile */
        .mobile-toggle-btn {
            display: none; /* Oculto no Desktop */
            position: absolute;
            top: 15px;
            left: 15px;
            z-index: 1030;
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 0.5rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        /* Overlay para Mobile */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1035;
            opacity: 0;
            transition: opacity 0.3s;
        }

        /* --- RESPONSIVIDADE --- */
        @@media (max-width: 991.98px) {
            .app-sidebar

        {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            transform: translateX(-100%); /* Esconde a sidebar */
        }

        .app-sidebar.show {
            transform: translateX(0); /* Mostra a sidebar */
        }

        .sidebar-overlay.show {
            display: block;
            opacity: 1;
        }

        .mobile-toggle-btn {
            display: block; /* Mostra botão no mobile */
        }

        /* Ajuste de padding no conteúdo para não ficar colado no botão */
        .container-fluid {
            padding-top: 60px !important;
        }

        }

        /* --- ALERTAS --- */
        .alert-floating-container {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 9999;
            width: 350px;
            max-width: 90%;
        }
    </style>
</head>
<body class="h-100">

    <!-- Overlay Escuro (Mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="d-flex h-100 w-100">

        <!-- SIDEBAR -->
        <nav class="app-sidebar shadow" id="appSidebar">
            <div class="sidebar-brand">
                <i class="bi bi-bag-dash-fill me-2 text-primary"></i> PDV <span class="fw-light ms-1 text-muted fs-6">Pro</span>
                <!-- Botão fechar no mobile -->
                <button class="btn text-white ms-auto d-lg-none" id="sidebarClose">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="sidebar-menu-container">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-calculator-fill"></i> Frente de Caixa
                        </a>
                    </li>

                    <li class="nav-title">Gestão</li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Vendas" asp-action="Index">
                            <i class="bi bi-receipt"></i> Histórico Vendas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Fechamentoes" asp-action="Index">
                            <i class="bi bi-safe2-fill"></i> Fechamentos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Vendas" asp-action="VendasPendentes">
                            <i class="bi bi-bank"></i> Pendências
                        </a>
                    </li>

                    <li class="nav-title">Cadastros</li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Produtos" asp-action="Index">
                            <i class="bi bi-box-seam-fill"></i> Produtos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                            <i class="bi bi-people-fill"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Fornecedors" asp-action="Index">
                            <i class="bi bi-truck"></i> Fornecedores
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TipoPagamentoes" asp-action="Index">
                            <i class="bi bi-wallet-fill"></i> Formas Pagto
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ProdutoPromocao" asp-action="Index">
                            <i class="bi bi-percent"></i> Promoções
                        </a>
                    </li>

                    <li class="nav-title">Fiscal</li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="NotaFiscal" asp-action="Index">
                            <i class="bi bi-building"></i> NFe
                        </a>
                    </li>

                    <li class="nav-title">Configurações</li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UsuarioEmpresa" asp-action="ValidaInformacoes">
                            <i class="bi bi-building"></i> Minha Empresa
                        </a>
                    </li>
                </ul>
            </div>

            <a asp-controller="UsuarioEmpresa" asp-action="ValidaInformacoes" class="text-decoration-none">
                <div class="sidebar-footer">
                    <div class="d-flex align-items-center">
                        <!-- Avatar do Operador com cor dinâmica baseada no status -->
                        <div class="rounded-circle @statusBg bg-opacity-25 p-2 me-2 text-white">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <div class="text-truncate">
                            <div class="text-white fw-bold small">@nomeEmpresa</div>
                            <!-- Status dinâmico -->
                            <div class="@statusColor small" style="font-size: 0.75rem;">● @statusText</div>
                        </div>
                    </div>
                </div>
            </a>
        </nav>

        <!-- MAIN CONTENT -->
        <main class="app-main">

            <!-- Botão Toggle Mobile -->
            <button class="mobile-toggle-btn d-lg-none" id="sidebarToggle">
                <i class="bi bi-list fs-4 text-dark"></i>
            </button>

            <!-- Alertas Flutuantes -->
            <div class="alert-floating-container">
                @if (TempData["Sucesso"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                        <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Sucesso!</strong>
                            <div class="small">@TempData["Sucesso"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Erro"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Atenção!</strong>
                            <div class="small">@TempData["Erro"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <div class="content-scrollable">
                @RenderBody()
            </div>

        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // 1. Pega o caminho atual e remove query strings (?page=1 etc)
            const currentPath = window.location.pathname.toLowerCase();
            const links = document.querySelectorAll('.sidebar-menu-container .nav-link');

            let bestMatchLink = null;
            let maxMatchLength = 0;

            links.forEach(link => {
                const href = link.getAttribute('href').toLowerCase();

                // Ignora links vazios ou âncoras simples
                if (!href || href === '#') return;

                // Caso 1: Match Exato (Prioridade Máxima)
                // Ex: Estou em /Vendas e o link é /Vendas
                if (currentPath === href) {
                    bestMatchLink = link;
                    maxMatchLength = 9999; // Força ser o vencedor
                }
                // Caso 2: Começa com (Para sub-páginas como /Vendas/Edit/1)
                // Só entra aqui se ainda não achou match exato
                else if (currentPath.startsWith(href) && href !== '/' && maxMatchLength < 9999) {

                    // AQUI ESTÁ O TRUQUE:
                    // Se eu estou em /Vendas/VendasPendentes
                    // Link A: /Vendas (tamanho 7) -> Match
                    // Link B: /Vendas/VendasPendentes (tamanho 23) -> Match
                    // O Link B é maior, então ele ganha e substitui o Link A como 'bestMatchLink'

                    if (href.length > maxMatchLength) {
                        maxMatchLength = href.length;
                        bestMatchLink = link;
                    }
                }
                // Caso 3: Home Page (Raiz)
                else if (currentPath === '/' && href === '/') {
                    bestMatchLink = link;
                    maxMatchLength = 9999;
                }
            });

            // Aplica a classe active apenas no vencedor
            if (bestMatchLink) {
                bestMatchLink.classList.add('active');
            }

            // Lógica Mobile Sidebar 
            const sidebar = document.getElementById('appSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const toggleBtn = document.getElementById('sidebarToggle');
            const closeBtn = document.getElementById('sidebarClose');

            function toggleSidebar() {
                sidebar.classList.toggle('show');
                overlay.classList.toggle('show');
            }

            if(toggleBtn) toggleBtn.addEventListener('click', toggleSidebar);
            if(closeBtn) closeBtn.addEventListener('click', toggleSidebar);
            if(overlay) overlay.addEventListener('click', toggleSidebar);

            // Auto-hide alertas
            setTimeout(function() {
                $('.alert-floating-container .alert').alert('close');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_DeleteModal" />
</body>
</html>
