<!DOCTYPE html>
<html lang="pt-br" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDV</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PDV.styles.css" asp-append-version="true" />

    <style>
        body {
            overflow: hidden;
        }
        .nav-pills .nav-link.text-white {
            transition: background-color 0.2s ease-in-out;
        }
        .nav-pills .nav-link.text-white:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body class="h-100">
    <div class="d-flex h-100">

        <nav class="d-flex flex-column flex-shrink-0 p-3 navbar-dark bg-dark shadow-sm" style="min-height: 100vh;">

            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop me-2"></i>PDV
            </a>

            <hr class="text-secondary">
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-cash-coin me-2"></i>Frente de Caixa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Produtos" asp-action="Index">
                        <i class="bi bi-box-seam-fill me-2"></i>Produtos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i>Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="TipoPagamentoes" asp-action="Index">
                        <i class="bi bi-credit-card-fill me-3"></i>Tipo de Pagamento
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Fechamentoes" asp-action="Index">
                        <i class="bi bi-wallet2 me-2"></i>Fechamentos Caixa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Vendas" asp-action="Index">
                        <i class="bi bi-wallet2 me-2"></i>Vendas
                    </a>
                </li>
            </ul>
        </nav>

        <main role="main" class="flex-grow-1 p-4" style="max-height: 100vh; overflow-y: auto;">
            @RenderBody()
        </main>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <partial name="_DeleteModal" />
</body>
</html>