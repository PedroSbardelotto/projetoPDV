@model PDV.Models.Helper.PaginatedList<PDV.Models.Fechamento>
@using System.Globalization

@{
    ViewData["Title"] = "Histórico de Caixa";
    var culture = new CultureInfo("pt-BR");

    // Controle dos botões de paginação
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Histórico de Caixa</h2>
            <p class="text-muted small mb-0">Registros de aberturas e fechamentos</p>
        </div>
        <!-- Botão opcional para voltar ao PDV -->
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary px-3 rounded-3">
            <i class="bi bi-calculator-fill me-2"></i>Ir para PDV
        </a>
    </div>

    <!-- Card da Tabela -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold border-0">Data Abertura</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-end">Fundo Inicial</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-end">Valor Final</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-center">Status</th>
                            <th class="pe-4 py-3 text-uppercase text-muted small fw-bold border-0 text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Lógica Visual
                            bool isAberto = !item.DataFechamento.HasValue;
                            string rowClass = isAberto ? "bg-success bg-opacity-10" : "border-bottom border-light";

                            <tr class="@rowClass">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-3 bg-white border d-flex align-items-center justify-content-center me-3"
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-calendar-week text-secondary"></i>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@item.DataAbertura.ToString("dd/MM/yyyy")</span>
                                            <span class="small text-muted">@item.DataAbertura.ToString("HH:mm")</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end">
                                    <span class="font-monospace text-dark">@item.ValorAbertura.ToString("C", culture)</span>
                                </td>

                                <td class="text-end">
                                    @if (item.DataFechamento.HasValue)
                                    {
                                        <span class="font-monospace fw-bold text-dark">@item.ValorFechamento.ToString("C", culture)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">-- em aberto --</span>
                                    }
                                </td>

                                <td class="text-center">
                                    @if (isAberto)
                                    {
                                        <span class="badge bg-success text-white shadow-sm rounded-pill px-3">
                                            <i class="bi bi-unlock-fill me-1"></i> Aberto
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-3">
                                            <i class="bi bi-lock-fill me-1"></i> Fechado
                                        </span>
                                    }
                                </td>

                                <td class="pe-4 text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border shadow-sm text-primary fw-bold" title="Ver Detalhes / Conferência">
                                        <i class="bi bi-file-earmark-text me-1"></i>Detalhes
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted opacity-25" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Nenhum registro de caixa encontrado.</p>
                </div>
            }
        </div>

        <!-- Rodapé com Paginação -->
        @if (Model.Any())
        {
            <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Página <strong>@Model.PageIndex</strong> de <strong>@Model.TotalPages</strong>
                </div>

                <div>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       class="btn btn-sm btn-light border @prevDisabled">
                        <i class="bi bi-chevron-left"></i> Anterior
                    </a>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       class="btn btn-sm btn-light border ms-1 @nextDisabled">
                        Próxima <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>