@model PDV.Models.ViewModels.FechamentoDetailsViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Conferência de Caixa";
    var culture = new CultureInfo("pt-BR");

    // --- LÓGICA DE CÁLCULO ---

    // 1. Vendas Finalizadas (Status 1)
    var vendasFinalizadas = Model.Vendas.Where(v => v.Status == 1).ToList();
    var totalFaturadoReal = vendasFinalizadas.Sum(v => v.ValorTotal);

    // 1.1 Agrupamento por Forma de Pagamento (NOVO)
    var resumoPagamentos = vendasFinalizadas
        .GroupBy(v => v.TipoPagamento?.Descricao ?? "Não Definido")
        .Select(g => new
        {
            Metodo = g.Key,
            Total = g.Sum(x => x.ValorTotal),
            Quantidade = g.Count(),
            Percentual = totalFaturadoReal > 0 ? (g.Sum(x => x.ValorTotal) / totalFaturadoReal) * 100 : 0
        })
        .OrderByDescending(x => x.Total)
        .ToList();

    // Lógica para saber quanto deveria ter de DINHEIRO FÍSICO na gaveta
    // Assumindo que a string seja exata "Dinheiro". Ajuste conforme seu banco de dados.
    var totalEmDinheiro = vendasFinalizadas
        .Where(v => v.TipoPagamento?.Descricao.Contains("Dinheiro", StringComparison.OrdinalIgnoreCase) ?? false)
        .Sum(f => f.ValorTotal);

    // 2. Vendas Pendentes (Status 2)
    var vendasPendentes = Model.Vendas.Where(v => v.Status == 2).ToList();
    var totalEmHaver = vendasPendentes.Sum(v => v.ValorTotal);
    var qtdPendentes = vendasPendentes.Count();

    // 3. Totais Gerais
    var valorAbertura = Model.Fechamento.ValorAbertura;

    // O esperado FÍSICO na gaveta = Abertura + Vendas em Dinheiro
    var valorEmCaixaEsperado = valorAbertura + totalEmDinheiro;

    var estaFechado = Model.Fechamento.DataFechamento.HasValue;

    decimal diferenca = 0;
    if (estaFechado)
    {
        diferenca = Model.Fechamento.ValorFechamento - valorEmCaixaEsperado;
    }

    // Função local para ícones
    string GetIconForPayment(string metodo)
    {
        metodo = metodo.ToLower();
        if (metodo.Contains("dinheiro")) return "bi-cash-coin";
        if (metodo.Contains("pix")) return "bi-qr-code-scan";
        if (metodo.Contains("cart") || metodo.Contains("crédito") || metodo.Contains("débito")) return "bi-credit-card-2-front";
        return "bi-wallet2";
    }
}

<style>
    /* Botão Interativo de Status */
    .btn-status-container {
        position: relative;
        display: inline-block;
    }

    .btn-status-toggle {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        position: relative;
        min-width: 180px;
        border: none;
    }

    /* Estado Normal: Verde (Aberto) */
    .btn-status-toggle {
        background-color: #198754;
        color: white;
    }

        .btn-status-toggle .content-hover {
            display: none;
        }

        /* Estado Hover: Vermelho (Fechar) */
        .btn-status-toggle:hover {
            background-color: #dc3545;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

            .btn-status-toggle:hover .content-normal {
                display: none;
            }

            .btn-status-toggle:hover .content-hover {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                animation: slideUp 0.2s ease-out;
            }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashed-border {
        border: 2px dashed #e2e8f0;
    }

    .progress-thin {
        height: 6px;
        border-radius: 3px;
    }
</style>

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">@ViewData["Title"]</h2>
            <div class="text-muted small mt-1">
                <i class="bi bi-calendar-event me-1"></i> Aberto em: @Model.Fechamento.DataAbertura.ToString("dd/MM/yyyy HH:mm")
            </div>
        </div>

        <div>
            @if (estaFechado)
            {
                <div class="bg-secondary text-white px-4 py-2 rounded-pill shadow-sm d-flex align-items-center">
                    <i class="bi bi-lock-fill me-2"></i>
                    <div class="d-flex flex-column" style="line-height: 1.1;">
                        <span class="fw-bold small">CAIXA FECHADO</span>
                        <span style="font-size: 0.7rem;">@Model.Fechamento.DataFechamento?.ToString("dd/MM HH:mm")</span>
                    </div>
                </div>
            }
            else
            {
                <button type="button"
                        class="btn btn-lg btn-status-toggle rounded-pill shadow-sm fw-bold"
                        data-bs-toggle="modal"
                        data-bs-target="#modalConfirmarFechamento">
                    <span class="content-normal"><i class="bi bi-unlock-fill me-2"></i>CAIXA ABERTO</span>
                    <span class="content-hover"><i class="bi bi-x-circle-fill me-2"></i>ENCERRAR AGORA</span>
                </button>
            }
        </div>
    </div>

    <!-- DASHBOARD PRINCIPAL -->
    <div class="row g-3 mb-4">
        <!-- 1. Abertura -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(145deg, #ffffff, #f8f9fa);">
                <div class="card-body">
                    <small class="text-muted fw-bold text-uppercase letter-spacing-1">Fundo Inicial</small>
                    <div class="d-flex align-items-center mt-2">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3 text-primary">
                            <i class="bi bi-box-arrow-in-down fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-dark">@valorAbertura.ToString("C", culture)</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. Faturamento -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <small class="text-muted fw-bold text-uppercase letter-spacing-1">Total Recebido</small>
                    <div class="d-flex align-items-center mt-2">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3 text-success">
                            <i class="bi bi-wallet2 fs-4"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold text-success">@totalFaturadoReal.ToString("C", culture)</h3>
                            <small class="text-muted" style="font-size: 0.8rem;">(Soma de todos os meios)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. Resultado -->
        <div class="col-md-4">
            @if (estaFechado)
            {
                var cor = diferenca >= 0 ? "text-success" : "text-danger";
                var bgIcon = diferenca >= 0 ? "bg-success" : "bg-danger";
                var icon = diferenca >= 0 ? "bi-check-lg" : "bi-exclamation-lg";
                var label = diferenca == 0 ? "Caixa Batido" : (diferenca > 0 ? "Sobra" : "Quebra");

                <div class="card border-0 shadow-sm h-100" style="background-color: #fff;">
                    <div class="card-body position-relative overflow-hidden">
                        <div class="position-absolute top-0 bottom-0 start-0 @bgIcon" style="width: 5px;"></div>
                        <small class="text-muted fw-bold text-uppercase letter-spacing-1">Conferência (@label)</small>
                        <div class="d-flex align-items-center mt-2">
                            <div class="rounded-circle @bgIcon bg-opacity-10 p-3 me-3 @cor">
                                <i class="bi @icon fs-4"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold @cor">@diferenca.ToString("C", culture)</h3>
                                <small class="text-muted" style="font-size: 0.75rem;">Dinheiro Esperado: @valorEmCaixaEsperado.ToString("C", culture)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm h-100 bg-light dashed-border">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <div class="text-muted mb-1 fw-bold text-uppercase small">Esperado na Gaveta</div>
                        <div class="fs-4 fw-bold text-dark">@valorEmCaixaEsperado.ToString("C", culture)</div>
                        <small class="text-muted" style="font-size: 0.7rem;">(Abertura + Vendas Dinheiro)</small>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row g-3 mb-4">
        <!-- Detalhes por Forma de Pagamento -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-dark"><i class="bi bi-pie-chart-fill me-2 text-primary"></i>Receitas por Forma de Pagamento</h6>
                </div>
                <div class="card-body">
                    @if (resumoPagamentos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-borderless align-middle mb-0">
                                <tbody>
                                    @foreach (var item in resumoPagamentos)
                                    {
                                        <tr>
                                            <td style="width: 50px;">
                                                <div class="rounded-3 bg-light p-2 d-flex align-items-center justify-content-center text-primary">
                                                    <i class="bi @GetIconForPayment(item.Metodo) fs-5"></i>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span class="fw-bold text-dark">@item.Metodo</span>
                                                    <span class="fw-bold text-dark">@item.Total.ToString("C", culture)</span>
                                                </div>
                                                <div class="progress progress-thin bg-light">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @item.Percentual.ToString("F0", CultureInfo.InvariantCulture)%"></div>
                                                </div>
                                                <div class="d-flex justify-content-between mt-1">
                                                    <small class="text-muted">@item.Quantidade vendas</small>
                                                    <small class="text-muted">@item.Percentual.ToString("F1")%</small>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <small>Nenhuma venda concluída registrada.</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Resumo de Pendências -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-warning bg-opacity-10">
                <div class="card-body position-relative">
                    <div class="position-absolute top-0 end-0 p-3 opacity-25">
                        <i class="bi bi-hourglass-split display-1 text-warning"></i>
                    </div>

                    <h6 class="fw-bold text-dark mb-4"><i class="bi bi-exclamation-circle-fill me-2 text-warning"></i>Controle de Fiado</h6>

                    <div class="mb-4">
                        <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Valor Total a Receber</small>
                        <h2 class="fw-bold text-dark display-6">@totalEmHaver.ToString("C", culture)</h2>
                    </div>

                    <div class="d-flex align-items-center justify-content-between bg-white bg-opacity-50 p-3 rounded-3 mb-3">
                        <span class="text-muted fw-bold small">Quantidade de Vendas Pendentes</span>
                        <span class="badge bg-warning text-dark rounded-pill">@qtdPendentes</span>
                    </div>

                    <p class="small text-muted mb-0 lh-sm">
                        * Estes valores <strong>não</strong> estão somados no faturamento do caixa atual pois ainda não foram quitados.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- TABELA DE EXTRATO (Mantida igual, apenas visual clean) -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold text-uppercase text-muted small letter-spacing-1">Extrato Completo de Movimentações</h6>
            <span class="badge bg-light text-secondary border">@Model.Vendas.Count registros</span>
        </div>

        <div class="card-body p-0">
            @if (Model.Vendas.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase small fw-bold text-muted border-0">ID</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted border-0">Hora</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted border-0">Cliente</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted border-0">Tipo</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted border-0 text-end">Valor</th>
                                <th class="pe-4 py-3 text-uppercase small fw-bold text-muted border-0 text-end">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venda in Model.Vendas.OrderByDescending(x => x.DataEntrada))
                            {
                                bool isCaixinha = venda.Status == 2;
                                string bgRow = isCaixinha ? "bg-warning bg-opacity-10" : "border-bottom border-light";
                                string textVal = isCaixinha ? "text-warning" : "text-success";

                                <tr class="@bgRow">
                                    <td class="ps-4 fw-bold text-secondary small">#@venda.Id</td>
                                    <td class="small text-muted">@venda.DataEntrada.ToString("HH:mm")</td>
                                    <td>
                                        @if (venda.Cliente != null)
                                        {
                                            <span class="fw-bold text-dark d-block">@venda.Cliente.Nome</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic small">Consumidor Final</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isCaixinha)
                                        {
                                            <span class="badge bg-warning text-dark border border-warning rounded-pill">
                                                <i class="bi bi-clock-history me-1"></i> Pendente
                                            </span>
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="bi @GetIconForPayment(venda.TipoPagamento?.Descricao ?? "") text-secondary me-2"></i>
                                                <span class="small text-dark fw-bold">@(venda.TipoPagamento?.Descricao ?? "Pago")</span>
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end fw-bold @textVal">
                                        @venda.ValorTotal.ToString("C", culture)
                                    </td>
                                    <td class="pe-4 text-end">
                                        <a asp-controller="Vendas" asp-action="Details" asp-route-id="@venda.Id"
                                           class="btn btn-sm btn-white border shadow-sm text-muted"
                                           title="Ver Recibo">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted opacity-25" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Nenhuma venda neste período.</p>
                </div>
            }
        </div>

        <div class="card-footer bg-light py-3">
            <a asp-action="Index" class="btn btn-outline-secondary fw-bold btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>
</div>

<!-- Modal de Fechamento -->
<div class="modal fade" id="modalConfirmarFechamento" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <form asp-action="FecharCaixa" asp-controller="Home" method="post" id="form-fechar-caixa-details">
                <div class="modal-header bg-danger text-white border-0 rounded-top-4">
                    <h6 class="modal-title fw-bold"><i class="bi bi-safe-fill me-2"></i>Conferência Final</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4 text-center">
                    <div class="mb-4">
                        <div class="bg-danger bg-opacity-10 p-3 rounded-circle d-inline-flex text-danger">
                            <i class="bi bi-cash-stack fs-1"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold text-dark mb-2">Quanto tem de DINHEIRO na gaveta?</h5>
                    <p class="text-muted small mb-4">Conte apenas o dinheiro físico (notas e moedas). Não inclua comprovantes de cartão.</p>

                    <div class="form-floating mb-3">
                        <input type="number" step="0.01" class="form-control form-control-lg text-center fw-bold fs-2 text-danger border-danger"
                               id="valorFechamento" placeholder="0,00" name="ValorFechamento" required autofocus>
                        <label for="valorFechamento" class="text-center w-100">Valor Contado (R$)</label>
                    </div>

                    <div class="alert alert-light border small text-muted">
                        <i class="bi bi-info-circle me-1"></i> O sistema espera: <strong>@(valorEmCaixaEsperado.ToString("C", culture))</strong> em espécie.
                    </div>
                </div>
                <div class="modal-footer border-0 bg-light rounded-bottom-4 justify-content-center pb-4">
                    <button type="button" class="btn btn-link text-decoration-none text-secondary me-3" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger px-5 py-2 fw-bold shadow-sm rounded-pill" id="btn-confirmar-fechar-details">
                        <i class="bi bi-check-lg me-2"></i>Confirmar e Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const formFechar = document.getElementById('form-fechar-caixa-details');
        if (formFechar) {
            formFechar.addEventListener('submit', function () {
                const btn = document.getElementById('btn-confirmar-fechar-details');
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processando...';
            });
        }
        // Focus automático
        const modalFechamento = document.getElementById('modalConfirmarFechamento');
        modalFechamento.addEventListener('shown.bs.modal', () => {
            document.getElementById('valorFechamento').focus();
        });
    </script>
}