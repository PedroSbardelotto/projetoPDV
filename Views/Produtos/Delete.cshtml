@model PDV.Models.Produto
@using System.Globalization

@{
    ViewData["Title"] = "Confirmar Exclusão";
    var culture = new CultureInfo("pt-BR");
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["Title"]</h4>
            </div>

            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Atenção!</strong> Você tem certeza que deseja excluir permanentemente este item?
                </div>

                <h5>Produto a ser excluído:</h5>

                <dl class="row mt-3 bg-light p-3 rounded">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Categoria)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria.Nome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Preco)</dt>
                    <dd class="col-sm-8">@Model.Preco.ToString("C", culture)</dd>
                </dl>

                <p class="text-danger mt-3"><small>Esta ação não pode ser desfeita.</small></p>
            </div>

            <div class="card-footer bg-light">
                <form asp-action="Delete" class="d-flex justify-content-between">
                    <input type="hidden" asp-for="Id" />

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>

                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-2"></i>Sim, Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>