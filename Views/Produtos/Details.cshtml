@model PDV.Models.Produto
@using System.Globalization

@{
    ViewData["Title"] = "Detalhes do Produto";
    // Define a cultura pt-BR para formatar a moeda e datas
    var culture = new CultureInfo("pt-BR");
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewData["Title"]: @Model.Nome</h4>

                @if (Model.Status)
                {
                    <span class="badge bg-success">Ativo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inativo</span>
                }
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Categoria)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Nome)</dd>

                    <hr class="my-3">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Preco)</dt>
                    <dd class="col-sm-9">@Model.Preco.ToString("C", culture)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantidade)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantidade) unidades</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.QuantidadeMinima)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.QuantidadeMinima) unidades</dd>

                    <hr class="my-3">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataEntrada)</dt>
                    <dd class="col-sm-9">@Model.DataEntrada.ToString("f", culture)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataAtualizacao)</dt>
                    <dd class="col-sm-9">@Model.DataAtualizacao.ToString("f", culture)</dd>
                </dl>
            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar à Lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-fill me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>