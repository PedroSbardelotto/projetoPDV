@model PDV.Models.Helper.PaginatedList<PDV.Models.Produto>
@using System.Globalization

@{
    ViewData["Title"] = "Produtos";
    var culture = new CultureInfo("pt-BR");

    // Controle dos botões
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Produtos</h2>
            <p class="text-muted small mb-0">Catálogo de itens e estoque</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" asp-controller="Categorias" class="btn btn-outline-secondary px-3 rounded-3">
                <i class="bi bi-tags-fill me-2"></i>Categorias
            </a>
            <a asp-action="Create" class="btn btn-primary px-4 fw-bold shadow-sm rounded-3">
                <i class="bi bi-plus-lg me-2"></i>Novo Produto
            </a>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold border-0">Item</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0">Categoria</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-end">Preço</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-center">Estoque</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold border-0 text-center">Status</th>
                            <th class="pe-4 py-3 text-uppercase text-muted small fw-bold border-0 text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            bool estoqueBaixo = item.Quantidade <= item.QuantidadeMinima;

                            <tr class="border-bottom border-light @(item.Status ? "" : "bg-light opacity-75")">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-3 bg-light text-secondary d-flex align-items-center justify-content-center me-3 border"
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-box-seam fs-5"></i>
                                        </div>
                                        <span class="fw-semibold text-dark">@item.Nome</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill fw-normal px-3">
                                        @item.Categoria?.Nome
                                    </span>
                                </td>
                                <td class="text-end font-monospace fw-bold text-primary">
                                    @item.Preco.ToString("C", culture)
                                </td>
                                <td class="text-center">
                                    @if (estoqueBaixo)
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning rounded-pill" title="Estoque Baixo">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i> @item.Quantidade
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fw-bold">@item.Quantidade</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.Status)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3">Inativo</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary" title="Editar">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info" title="Detalhes">
                                            <i class="bi bi-search"></i>
                                        </a>
                                        @if (item.Status == true)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-bs-id="@item.Id"
                                                    data-bs-name="@item.Nome"
                                                    data-nome-base="produto"
                                                    data-bs-url="@Url.Action("DeleteOrActivate", "Produtos")">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-success"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#activateModal"
                                                    data-bs-id="@item.Id"
                                                    data-bs-name="@item.Nome"
                                                    data-nome-base="produto"
                                                    data-bs-url="@Url.Action("DeleteOrActivate", "Produtos")">
                                                <i class="bi bi-check2-all"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Estado Vazio -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-box2 text-muted opacity-25" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Nenhum produto cadastrado.</p>
                </div>
            }
        </div>

        <!-- Rodapé com Paginação -->
        @if (Model.Any())
        {
            <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Página <strong>@Model.PageIndex</strong> de <strong>@Model.TotalPages</strong>
                </div>

                <div>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       class="btn btn-sm btn-light border @prevDisabled">
                        <i class="bi bi-chevron-left"></i> Anterior
                    </a>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       class="btn btn-sm btn-light border ms-1 @nextDisabled">
                        Próxima <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<partial name="_DeleteModal" />
<partial name="_ActivateModal" />

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#Preco').mask('000.000.000.000.000,00', {reverse: true});
        });
    </script>
}