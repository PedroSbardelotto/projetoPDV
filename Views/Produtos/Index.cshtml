@model IEnumerable<PDV.Models.Produto>
@using System.Globalization

@{
    ViewData["Title"] = "Gestão de Produtos";
    // Define a cultura pt-BR para formatar a moeda corretamente
    var culture = new CultureInfo("pt-BR");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Novo Produto
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between">
        <h5 class="mb-0">Produtos Cadastrados</h5>
        <a asp-action="Index" asp-controller="Categorias" class="btn btn-success shadow-sm">
            <i class="bi bi-tags-fill me-2"></i>Categorias
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Preco)</th>
                        <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
                        <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>

                            <td class="text-center">@item.Preco.ToString("C", culture)</td>

                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Quantidade)
                                @if (item.Quantidade <= item.QuantidadeMinima)
                                {
                                    <span class="badge bg-warning text-dark ms-2" title="Estoque baixo!">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                    </span>
                                }
                            </td>

                            <td class="text-center">@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>

                            <td class="text-center">
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-bs-id="@item.Id"
                                        data-bs-name="@item.Nome"
                                        data-nome-base="produto"
                                        data-bs-url="@Url.Action("Delete", "Produtos")">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_DeleteModal" />