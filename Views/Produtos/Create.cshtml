@model PDV.Models.Produto

@{
    ViewData["Title"] = "Novo Produto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3 text-primary">
                            <i class="bi bi-box-seam fs-4"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">Cadastrar Produto</h4>
                            <p class="text-muted small mb-0">Defina os detalhes do item.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Seção Principal -->
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label asp-for="Nome" class="form-label fw-bold small text-uppercase text-muted">Descrição do Produto</label>
                                <input asp-for="Nome" class="form-control form-control-lg bg-light border-0" placeholder="Ex: Coca-Cola 2L" autofocus />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="CategoriaId" class="form-label fw-bold small text-uppercase text-muted">Categoria</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-tag"></i></span>
                                    <select asp-for="CategoriaId" class="form-select border-start-0" asp-items="ViewBag.CategoriaId">
                                        <option value="">Selecione...</option>
                                    </select>
                                </div>
                                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Painel de Valores e Estoque -->
                        <div class="p-4 rounded-4 bg-light mb-4 border border-light">
                            <h6 class="fw-bold text-primary small text-uppercase mb-3">
                                <i class="bi bi-sliders me-2"></i>Controle Financeiro e Estoque
                            </h6>

                            <div class="row g-3">
                                <!-- Linha 1: Financeiro -->
                                <div class="col-md-6">
                                    <label asp-for="Custo" class="form-label fw-bold small text-muted">Preço de Custo</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0 text-secondary">R$</span>
                                        <input asp-for="Custo" id="Custo" class="form-control border-0 fw-bold text-secondary" placeholder="0,00" />
                                    </div>
                                    <span asp-validation-for="Custo" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Preco" class="form-label fw-bold small text-muted">Preço de Venda</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0 text-success fw-bold">R$</span>
                                        <input asp-for="Preco" id="Preco" class="form-control border-0 fw-bold text-success" placeholder="0,00" />
                                    </div>
                                    <span asp-validation-for="Preco" class="text-danger small"></span>
                                </div>

                                <!-- Linha 2: Estoque -->
                                <div class="col-md-6">
                                    <label asp-for="Quantidade" class="form-label fw-bold small text-muted mt-2">Estoque Atual</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-box"></i></span>
                                        <input asp-for="Quantidade" type="number" class="form-control border-0" placeholder="0" />
                                    </div>
                                    <span asp-validation-for="Quantidade" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="QuantidadeMinima" class="form-label fw-bold small text-muted mt-2">Estoque Mínimo</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-bell"></i></span>
                                        <input asp-for="QuantidadeMinima" type="number" class="form-control border-0" placeholder="0" />
                                    </div>
                                    <span asp-validation-for="QuantidadeMinima" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="opacity-25 my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
                                <i class="bi bi-arrow-left me-1"></i> Voltar para lista
                            </a>
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold shadow-sm rounded-pill">
                                Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
            };
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#Preco').mask('000.000.000.000.000,00', {reverse: true});
            $('#Custo').mask('000.000.000.000.000,00', {reverse: true});
        });
    </script>
}