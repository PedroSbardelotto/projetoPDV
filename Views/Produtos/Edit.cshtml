@model PDV.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input asp-for="DataEntrada" hidden />
                    <input asp-for="DataAtualizacao" hidden />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag-fill"></i></span>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Coca-Cola 2L" />
                        </div>
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <label asp-for="Quantidade" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box"></i></span>
                                <input asp-for="Quantidade" class="form-control" type="number" placeholder="0" />
                            </div>
                            <span asp-validation-for="Quantidade" class="text-danger small"></span>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label asp-for="Preco" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Preco" class="form-control" type="text" placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Preco" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label">Categoria</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-bookmark-fill"></i></span>
                            <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                                <option value="">Selecione uma categoria...</option>
                            </select>
                        </div>
                        <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-switch mb-4 mt-4">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="Status">
                        <label class="form-check-label" asp-for="Status">Produto Ativo</label>
                        <small class="form-text text-muted d-block">Se desmarcado, o produto não aparecerá no PDV.</small>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
            };
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#Preco').mask('000.000.000.000.000,00', {reverse: true});
        });
    </script>
}